external string UseCases;
external string Tool;


#include "val/qrl/include/GenExecutableScripts.inc"
#include "val/qrl/include/CreateDir.inc"

void
main ()

{

  SUT = toolinfo_variable("T_SUT");

  list TestUnitList;
  int count1, i;
  string test_unit_name;
  string sdf_path, script_path;

  TestUnitList = string_to_list (UseCases, " ");

  count1 = list_count (TestUnitList);

  for (i=0;i<count1;i=i+1)
    {
      test_unit_name = list_get(TestUnitList,i);

      message ("Generating Data for Test Unit: " + test_unit_name); 

      sdf_path = OUTPUTPATH + test_unit_name;
      script_path = sdf_path + "/ExecutableTestScripts";

      InitializeScriptsPath(sdf_path , "ExecutableTestScripts");

      CreateExecuteScript(sdf_path, script_path, test_unit_name, NULL, Tool);

      CreateScenarioScript(sdf_path, script_path, test_unit_name, NULL, NULL, test_unit_name, Tool);
    }
}


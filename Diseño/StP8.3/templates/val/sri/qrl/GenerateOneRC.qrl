void 
main ()
{
  message ("");
  message ("");
  message ("Creating RC File  \"" + use_case_name + ".rc.template\"");
  message ("");
  message ("");

  string test_unit_id;



  test_unit_id = Get_T_test_unit_id(use_case_name, "");


  PrintRC(test_unit_id);

}

void
PrintRC(string test_unit_id)
{


  print_line ( "atsfile = \"" + test_unit_id + ".ats\"");
  print_line ( "help = \"/usr/lib/SR/smarts.hlp\"");
  print_line ( "logfile = \"" + test_unit_id + ".log\"");
  print_line ( "reportfile = \"" + test_unit_id + ".rpt\"");
  print_line ( "statusfile = \"" + test_unit_id + ".status\"");
  print_line ( "shellstring = \"\"");
  print_line ( "edit = \"xterm -e vi \"");
  print_line ( "diff = \"diff\"");
  print_line ( "filesave");
  print_line ( "nodiffsave");
  print_line ( "noshowsource");
  print_line ( "noshowinclude");
  print_line ( "interrupt");
  print_line ( "width = 30");

}

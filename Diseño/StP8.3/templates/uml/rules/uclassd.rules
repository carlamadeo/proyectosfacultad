// ECR 5184 start
// I moved this from uclassd_navigations.rules since it conflicts with same TypeSet in component/deployment diagrams.
TypeSet DOORS
{
	Package
	PackageName
	AllClassTypes
	Operation
	Attribute
	NaryAssociationHub
	InstantiatedClass
	Generalization
	Implements
	Refines
	NaryAssociationRole
	Dependency
}

NodeSymbol AllClassTypes
{
    { Navigation
	{ Name FindRefInComponentDiag }
        { Label "Component Diagram" }
        { Query "node_ref[file[UmlComponentDiagram] && node[UmlClass && name = '${node.name}']]"  }
 	{ UseMappings (ClassMapping) }
	{ FailureCmd GenericCmdTargetNotFound } 
    }
    { Navigation
	{ Name FindRefInDeploymentDiag }
        { Label "Deployment Diagram" }
        { Query "node_ref[file[UmlDeploymentDiagram] && node[UmlClass && name = '${node.name}']]"  }
 	{ UseMappings (ClassMapping) }
	{ FailureCmd GenericCmdTargetNotFound } 
    }
}
// ECR 5184 end

SymbolList
{
    { OrthogonalArcsAreAllowed True }
    { OrthogonalArcsAreDefault False }
    { ShowStraightArc True }
    { ShowSpline True }
    { Symbols
	(
                Note
                SEPARATOR
                Package
                Class
// ECR2653
             	Ellipsis
// ECR2653


		InstantiatedClass
		ParameterizedClass
                Attribute
                Operation
                SEPARATOR
		Interface
                Object
                InstanceAttribute

	)
    }
}


//    gde_builtin("EditorActionDone 0214951140  UmlSequenceLink_ps_ActionDone();"); // ECR 6880

    ps_init("UmlSequenceLink_ps", "ObjectName", ps_Link, string_to_list("SimpleMessage SynchronousMessage BalkingMessage TimeoutMessage AsynchronousMessage ReturnMessage", " "), ps_Link);

    // ECR 3789 begin
    ps_append_field("UmlSequenceLink_ps", "ObjectDescription",

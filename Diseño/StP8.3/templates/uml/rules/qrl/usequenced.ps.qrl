//////////////////////////////////////////////
// 
//  Sequence Nodes
//
//////////////////////////////////////////////

void
UmlSequence_ps_show()

{
    gde_builtin("PropertySheetShow UmlSequence_ps");

    // reset

    UmlSequence_ps_init();
}


// double click hook
void
UmlSequence_ps_double_click(gde_mapsymbol ms)
{
    ps_reset_last_fill();
    UmlSequence_ps_show();
}



boolean UmlSequence_ps_initted = False;

void
UmlSequence_ps_init()

{
    if (UmlSequence_ps_initted)
    {
        // just refresh the prop sheet
        ps_fill("UmlSequence_ps");
        return;
    }
    UmlSequence_ps_initted = True;
//    gde_builtin("EditorActionDone 0214951139  UmlSequence_ps_ActionDone();"); // ECR 6880
    ps_init("UmlSequence_ps", "ObjectName", ps_Node, string_to_list("Actor Package System PassiveObject ActiveObject", " "), ps_Node);

    // ECR 3789 begin
    ps_append_field("UmlSequence_ps", "ObjectDescription",
    "GenericObject", "", ps_NoteDescriptionExternal, NULL);
    // ECR 3789 end
    ps_append_field("UmlSequence_ps", "Stereotype", "UmlExtensibilityDefinition", "UmlStereotype", ps_StringAnt, NULL);
    ps_append_field("UmlSequence_ps", "Constraints", "UmlExtensibilityDefinition", "UmlConstraintItem", ps_StringList, NULL);
    ps_append_field("UmlSequence_ps", "TaggedValues", "UmlExtensibilityDefinition", "UmlTaggedValue", ps_StringList, NULL);

    ps_fill("UmlSequence_ps");

    //ps_dump();

    return;
}


// change focus of property sheet

void
UmlSequence_ps_ActionDone()

{
    // reset propsheet

    if( ui_owner_visible(to_ui_prop("UmlSequence_ps","OK")) ) // ECR 4037
        ps_fill("UmlSequence_ps");
}




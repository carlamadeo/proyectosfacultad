    ps_append_field("UmlSequenceLink_ps", "Stereotype", "UmlExtensibilityDefinition", "UmlStereotype", ps_StringAnt, NULL);
    ps_append_field("UmlSequenceLink_ps", "Constraints", "UmlExtensibilityDefinition", "UmlConstraintItem", ps_StringList, NULL);
    ps_append_field("UmlSequenceLink_ps", "TaggedValues", "UmlExtensibilityDefinition", "UmlTaggedValue", ps_StringList, NULL);
    
    ps_append_field("UmlSequenceLink_ps", "MessageObjectName", "", "", ps_SeqCollab, NULL);

    ps_append_field("UmlSequenceLink_ps", "NameComponent", "", "", ps_SeqCollab, NULL);
    // Begin add ECR 5050
    ps_append_field("UmlSequenceLink_ps", "ChooseAction", "", "", ps_ChooseAction, NULL);
    // End add ECR 5050
    ps_append_field("UmlSequenceLink_ps", "ReturnType", "", "", ps_SeqCollab, NULL);
    ps_append_field("UmlSequenceLink_ps", "MessageArgs", "", "", ps_SeqCollab, NULL);
    // Begin ECR4197
    ps_append_field("UmlSequenceLink_ps", "Destruction", "UmlMessageDefinition", "UmlMessageIsDestruction", ps_TrueFalse, NULL);
    // End ECR4197
    ps_append_field("UmlSequenceLink_ps", "PredecessorGuard", "", "", ps_SeqCollab, NULL);
    // Begin add ECR 5050
    ps_append_field("UmlSequenceLink_ps", "ChooseGuard", "", "", ps_ChooseGuard, NULL);
    // End add ECR 5050

    ps_append_field("UmlSequenceLink_ps", "MessageSequence", "", "", ps_SeqCollab, NULL);

    ps_append_field("UmlSequenceLink_ps", "MessageRecurrence", "", "", ps_SeqCollab, NULL);
    // Begin ECR4197
    ps_append_field("UmlSequenceLink_ps", "Creation", "UmlMessageDefinition", "UmlMessageIsCreation", ps_TrueFalse, NULL);
    // End ECR4197
    ps_fill("UmlSequenceLink_ps");

    //ps_dump();

    return;
}



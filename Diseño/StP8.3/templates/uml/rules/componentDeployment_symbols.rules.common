// ECR 5184 start
Include "rules/uclassd_symbols.rules"
Include "rules/uclassd_marks.rules"

TypeSet AllClassTypesWithMarks
{
    Class    
}

// ECR 5184 end

NodeSymbol Vertex
{
    { ReplaceSet ( none ) }
    { Cardinality { Min 1 } { Max 1 } { InLinks AllLinkSymbols } }
    { Cardinality { Min 1 } { Max 1 } { OutLinks AllLinkSymbols } }
}

NodeSymbol binaryComponent 
{
    { PrintName "Binary Component" }
    { Shape
        { Predefined Package }
        { ToolbarImage "binary_component" }
    }
    { LabelAnchor North } // ECR 5184
    { CanAdjustLabel False }
    { DeleteDependents True }
    { AutoScaleSmaller False }
    { AutoScaleLarger True }
    { CanApplyScaleCmd True }
    { HAdjust Left }
	//ECR5014
	// expanded the default size, so the display mark fits properly
    { DefaultSize 2.75 1.2 }
    { DisplayMark
	{ Name binaryIndicator }
	{ StringMark "binary" }
	//ECR5014
	{ Anchor CenterLeft }
        // ECR 5749 begin
        // { YPixelOffset 15 }
        { VAdjust Center }
        // ECR 5749 end
	{ XPixelOffset 5 }
    }
    { DisplayMark
	{ Name ComponentStereotype }
	{ ItemCond (UmlStereotype) }
	{ StringMark "${annot.UmlExtensibilityDefinition.UmlStereotype}" }
    // Changed location for ECR4369
	{ Anchor LabelUpperLeft }
	{ Help "Component Stereotype" }
    }
    // Begin Add ECR 6389
    { DisplayMark
        { Name BcDescription }
        { CondFunc "symbol_has_description(0${node.id});" }
        { Anchor LowerRight }
        { VAdjust Bottom }
        { HAdjust Center }
        { YPixelOffset 19 }
        { BitmapMark0 "descln0" }
        { BitmapMark1 "descln1" }
        { BitmapMark2 "descln2" }
        { Help "Binary Component has description." }
    }
    // End Add ECR 6389
}


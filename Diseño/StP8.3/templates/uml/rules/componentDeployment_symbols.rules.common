NodeSymbol objectComponent
{
    { PrintName "Object Component" }
    { Shape
        { Predefined Rectangle }
        { ToolbarImage "object" }
    }
    { CanAdjustLabel False }
    { DeleteDependents True }
    { AutoScaleSmaller False }
    { AutoScaleLarger True }
    { CanApplyScaleCmd True }
    { HAdjust Center }
    { VAdjust Center }
    { DefaultSize 1.5 0.75 }
    // ECR 5184 start
    // If I do not underline the name of the objects,
    // they will not be didtinguished from classes. 
    // And in UML 1.3 spec the objects are with undelined names.
    { DisplayMark
        { Name UnderlineEffect }
        { LabelMark Underscore }
    }
    // ECR 5184 end
    { DisplayMark
	{ Name ComponentStereotype }
	{ ItemCond (UmlStereotype) }
	{ StringMark "${annot.UmlExtensibilityDefinition.UmlStereotype}" }
    // Changed location for ECR4369
	{ Anchor LabelUpperLeft }
	{ Help "Component Stereotype" }
    }
    { ReplaceSet ( none ) }
    // Begin Add ECR 6389
    { DisplayMark
        { Name ODescription }
        { CondFunc "symbol_has_description(0${node.id});" }
        { Anchor LowerRight }
        { VAdjust Bottom }
        { HAdjust Center }
        { YPixelOffset 19 }
        { BitmapMark0 "descln0" }
        { BitmapMark1 "descln1" }
        { BitmapMark2 "descln2" }
        { Help "Object Component has description." }
    }
    // End Add ECR 6389
}


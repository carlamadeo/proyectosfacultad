Note 806002
{
    { AppType DiagRptOptions }
    { PrintName "Diagram Report Options" }
    { HelpText "The Diagram Report Options note lets you add items containing basic information about the diagrams to be included in a report such as their type and whether they should be portrait or landscape." }
    { Bounds { Min 1 } { Max 1 } }
    { Item
        { AppType DiagramType }
        { PrintName "Diagram Type" }
        { Bounds { Min 1 } { Max 1 } }
        { HelpText "This item is required, and represents the diagram type that will be produced. Choose from the list of available types." }
    }
    { Item 
        { AppType DiagramName } 
        { PrintName "Diagram Name" }
        { Bounds { Min 1 } { Max 1 } } 
        { InitValue "${sym_label}" }
        { HelpText "This item is required and is used to specify the name of the diagram being reported on." }
    }
    { Item
        { AppType Caption }
        { PrintName "Caption" }
        { Bounds { Min 0 } { Max 1 } }
        { HelpText "This item specifies the caption shown for each diagram. The default caption used if this item is not specified is 'Diagram : ' followed by the name of the diagram." }
    }
    { Item
        { AppType CaptionOrientation }
        { PrintName "Caption Orientation" }
        { InitValue "AsDiagram" }
        { Bounds { Min 0 } { Max 1 } }
        { HelpText "This item determines whether the caption should be oriented as Portrait, Landscape, or AsDiagram (default)." }
    }
    { Item
        { AppType Orientation }
        { PrintName "Orientation" }
        { InitValue "BestFit" }
        { Bounds { Min 1 } { Max 1 } }
        { HelpText "This item determines whether the diagram should be oriented as PortraitFit, LandscapeFit, PortraitScale, LandscapeScale, or BestFit (default)." }
    }
    { Item
        { AppType DiagramFrameHeight }
        { PrintName "Diagram Frame Height" }
        { InitValue "7.0" }
        { Bounds { Min 0 } { Max 1 } } 
        { HelpText "This item determines the height of the frame into which the diagram will be placed." } 
    } 
    { Item  
        { AppType DiagramFrameWidth }  
        { PrintName "Diagram Frame Width" }  
        { InitValue "4.5" }   
        { Bounds { Min 0 } { Max 1 } }  
        { HelpText "This item determines the width of the frame into which the diagram will be placed." }   
    }
    { Item
        { AppType PrintSetting }
        { PrintName "Use Print Setting" }
        { Bounds { Min 0 } { Max 1 } }
        { HelpText "This item specifies a named print setting to use when printing this diagram." }
    }
}

Include "annotation/GenericRptOptions.note"
Include "annotation/generic_object"

//  Add any user customizations to the file included below:
IncludeIfExists "user/ct/annotation/user_singlediagsection"

Note 806001
{
    { AppType CoverPageRptOptions }
    { PrintName "Coverpage Options" }
    { HelpText "The Coverpage Options note lets you add items containing basic information about a report, such as its title, its author, and whether the report date should be displayed." }
    { Bounds { Min 1 } { Max 1 } }
    { Item
        { AppType Title }
        { PrintName "Title" }
        { InitValue "${sym_label}" }
        { Bounds { Min 1 } { Max 1 } }
        { HelpText "This item is used as the title for the document produced. If this item is not filled in, the coverpage symbol's label is used as the title." }
    }
    { Item
        { AppType Author }
        { PrintName "Author" }
        { InitValue "${user}" }
        { Bounds { Min 0 } { Max 1 } }
        { HelpText "This item contains the name of the document author. It is optional, and will not be shown if it is not filled in." }
    }
    { Item
        { AppType ShowReportDate }
        { PrintName "Show Report Date" }
        { Bounds { Min 0 } { Max 1 } }
        { InitValue "True" }
        { HelpText "This item determines if the date of the document should appear on the coverpage. The date format resembles Mon Jul 17 16:29:17 1995." }
    }
}

Include "annotation/TextRptOptions.note"
Include "annotation/GenericRptOptions.note"
Include "annotation/generic_object"

//  Add any user customizations to the file included below:
IncludeIfExists "user/ct/annotation/user_coverpagesection"

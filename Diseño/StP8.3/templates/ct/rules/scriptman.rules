	{ Builtin "MsgLogView" }
    }
    // ECR 6185 begin
    { MenuEntry
        { Name ShowDesktop }
        { Label "Show Desk&top" }
        { Builtin "StpemSendCmd stp EditorShowDeiconify" }
    }
    // ECR 6185 end
    { MenuEntry
	{ Name ShowScriptPath }
        { Label "Show &Path" }
        { Builtin "ScriptPathView" }
	{ ActiveFunc idehook_help_area }
    }
}


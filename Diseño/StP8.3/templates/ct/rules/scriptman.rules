Menu File
{
    { InMenuBar True }
    { Label "&File" }
    { Pin True }
    { MenuEntry
	{ Name RunScript }
	{ Label "&Run Script..." }
	{ Accelerator
             { Label "Ctrl+R" }
             { Value "Ctrl<Key>r" }
        }
	{ Builtin "ScriptRunView" }
	{ ActiveFunc idehook_show_run }
    }
    { MenuEntry
	{ Name KillScript }
	{ Label "&Terminate Script..." }
	{ Builtin "ScriptKillExecute" }
	{ ActiveFunc idehook_show_kill }
    }
    { MenuEntry
	{ Name RereadScript }
        { Label "R&escan" }
        { Builtin "ScriptReread" }
	{ ActiveFunc idehook_reread_template }
    }
    { Spacer { Name Spacer1 } }
    { MenuEntry
	{ Name Quit }
	{ Label "E&xit" }
	{ Builtin "EditorQuit" }
	// ECR 6184 begin
        // Commented out the following block
	// { Accelerator
    	//      { ParseCondition "!is_windows_platform();" }
        //      { Label "Ctrl+E" }
        //      { Value "Ctrl<Key>E" }
        // }
	// ECR 6184 end
	{ Accelerator
             // ECR 6184 begin
             // Commented out the following line
    	     // { ParseCondition "is_windows_platform();" }
             // ECR 6184 end
             { Label "Alt+F4" }
             { Value "Alt<Key>F4" }
        }
	{ ActiveFunc idehook_quit }
    }
}

Menu Edit
{
    { InMenuBar True }
    { Label "&Edit" }
    { Pin True }
    { MenuEntry
	{ Name EditScript }
	{ Label "&Edit Script" }
	{ Builtin "ScriptEdit" }
	{ ActiveFunc idehook_edit_template }
    }
    { MenuEntry
	{ Name EditExternalValue }
	{ Label "Edit E&xternal Value" }
	{ Builtin "ExternalValueEdit" }
	{ ActiveFunc idehook_edit_ext_val }
    }
    { Spacer { Name Spacer1 } }
    { MenuEntry
	{ Name CreateScript }
	{ Label "C&reate Script..." }
	{ Builtin "ScriptNewView" }
	{ ActiveFunc idehook_show_new }
    }
    { MenuEntry
	{ Name CopyScript }
	{ Label "&Copy Script..." }
	{ Builtin "ScriptCopyView" }
	{ ActiveFunc idehook_show_copy }
    }
    { Spacer { Name Spacer2 } }
    { MenuEntry
	{ Name DeleteExternalValue }
	{ Label "&Delete External Value" }
	{ Builtin "ExternalValueDelete" }
	{ ActiveFunc idehook_delete_ext_val }
    }
    { MenuEntry
	{ Name DeleteScript }
	{ Label "De&lete Level..." } // Default
	{ LabelFunc idehook_delete_template_label_func }
	{ Builtin "ScriptDelete" }
	{ ActiveFunc idehook_delete_template }
    }
    { Spacer { Name Spacer3 } }
    { MenuEntry
	{ Name ScriptManager }
	{ Label "&Options..." }
        { Builtin "EditorPropsView" }
    }
}

Menu View

TableType 1 SoftwareProcessTable
{
  { Initialize 
      { FROM_PHASE_COL 1 } 
      { EVENT_COL       2 } 
      { ACTION_COL      3 }   
      { TO_PHASE_COL  4 } }
  { Label "Demo Table" }
  { EmptyBorder { Visible False } }
  { RowHeight 35 }
  { ColWidth 140 }
  { Hsect
      { Frozen True } 
      { Scrollbar False }
      { Vsect
	  { Frozen True } 
	  { Scrollbar False }
	  { Row 
	      { Cell { Type hSpanHeaderCell } { Label "Phase Transitions" } } }
	  { Row 
	      { Cell { Type HeaderCell } { Label "Current Phase" } }
	      { Cell { Type HeaderCell } { Label "Event" } }
	      { Cell { Type HeaderCell } { Label "Action" } }
	      { Cell { Type HeaderCell } { Label "Next Phase" } } } } }
  { Hsect
      { Vsect
	  { Row { RepeatToEnd True }
	    { Type TransitionRow } 
	    { Cell { Type PhaseCell } }
	    { Cell { Type EventCell } }
	    { Cell { Type ActionCell } }
	    { Cell { Type PhaseCell } } } } } }


CellType 1 PhaseCell
{
  { Semantics
      { NodeMapping
	  { MappingName Phase }
	  { Name { LabelSelector Label } }
	  { Type Phase } } } }

RowType 1 TransitionRow
{
  { Semantics
      { LinkMapping
	  { MappingName Transition }
	  { Name
	      { LabelSelector Label }
	      { Cell
		  { Hsect HSECT } 
		  { Vsect VSECT }
		  { Row ROW }
		  { Col EVENT_COL } } }
	  { Type PhaseTransition }
	  { FromNode
	      { MappingName Phase }
	      { Cell
		  { Hsect HSECT } 
		  { Vsect VSECT }
		  { Row ROW }
		  { Col FROM_PHASE_COL } } }
	  { ToNode
	      { MappingName Phase }
	      { Cell
		  { Hsect HSECT } 
		  { Vsect VSECT }
		  { Row ROW }
		  { Col TO_PHASE_COL } } } } } }

CellType 2 EventCell
{
  { Semantics
      { NodeMapping
	  { MappingName Event }
	  { Name { LabelSelector Label } }
	  { Type Event } } } }

CellType 2 ActionCell
{
  { Semantics
      { NodeMapping
	  { MappingName Action }
	  { Name { LabelSelector Label } }
	  { Type Action } }
      { CntxMapping
	  { MappingName ActionInstance }
	  { Name { LabelFunc "action_instance_name()" } }
	  { Type ActionInstance }
	  { Link 
	      { MappingName Transition }
	      { Row
		  { Hsect HSECT }
		  { Vsect VSECT }
		  { Row ROW } } } } } }


Include "rules/gte_hdr_cells.std"

Features
{
    { Feature "stpcore_nt" }
    { Feature "stpcore_unix" }
    { Feature "stpcore_any" }
}

Include "rules/gte_menu_bar.std"
Include "rules/gte_annot_menu.std"
Include "rules/gte_edit_menu.std"

Command CheckSyntax
{
    { Builtin "EditorQrlEval \"spt_check_syntax();\"" }
}




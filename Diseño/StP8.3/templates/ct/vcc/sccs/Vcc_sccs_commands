% sccsid[] = %W% %Y% %D%; Copyright (C) IDE 1984-1990

vcc_init_command=vcc_sccs_init ${ti.vcc_flags} ${ti.vcc_sys_dir} ${ti.vcc_stor_dir}
vcc_init_flags=v0

% $% -> output file name
vcc_inquire_command=vcc_sccs_inq ${ti.vcc_flags} ${ti.vcc_file_dir} ${tmpfile} ${ti.vcc_file}
vcc_inquire_flags=v0

% Create a new file
vcc_create_command=vcc_sccs_create ${ti.vcc_flags} ${ti.vcc_file_dir} ${ti.system} ${ti.vcc_suffix} ${ti.vcc_file}
vcc_create_flags=v0K0D0M0A0E0

% List versions of a file in standard format
vcc_list_command=vcc_sccs_list ${ti.vcc_flags} -s ${ti.vcc_suffix} ${ti.vcc_file_dir} ${ti.vcc_diag}
vcc_list_flags=v0

% Current revision in `free' format
vcc_curr_v_command=vcc_sccs_curr ${ti.vcc_flags} ${ti.vcc_file_dir} ${ti.vcc_file}
vcc_curr_v_flags=A0v0

% Get version for reading
vcc_get_command=vcc_sccs_get ${ti.vcc_flags} -r${ti.vcc_rev} ${ti.vcc_file_dir} ${ti.vcc_rev_current} ${ti.vcc_suffix} ${ti.vcc_file} ${ti.vcc_out}
vcc_get_flags=A0v0

% Get version for editing
vcc_edit_command=vcc_sccs_edit ${ti.vcc_flags} -r${ti.vcc_rev} ${ti.vcc_file_dir} ${ti.vcc_rev_current} ${ti.vcc_suffix} ${ti.vcc_file}
vcc_edit_flags=A0v0

% Unedit version currently being edited
vcc_unedit_command=vcc_sccs_unedit ${ti.vcc_flags} ${ti.vcc_file_dir} ${ti.vcc_file}
vcc_unedit_flags=A0v0f0

% Create a new version -- delta
vcc_new_v_command=vcc_sccs_new_v ${ti.vcc_flags} ${ti.vcc_file_dir} ${ti.vcc_file}
vcc_new_v_flags=A0v0

% Create a new release
vcc_new_r_command=vcc_sccs_new_r ${ti.vcc_flags} -r${ti.vcc_rev} ${ti.vcc_file_dir}
vcc_new_r_flags=v0

% Editing status
vcc_status_command=vcc_sccs_status ${ti.vcc_flags} ${ti.vcc_file_dir}
vcc_status_flags=v0

% Clean directory
vcc_clean_command=vcc_sccs_clean ${ti.vcc_flags} ${ti.vcc_file_dir} ${ti.vcc_suffix}
vcc_clean_flags=v0

vcc_hist_command=vcc_sccs_hist ${ti.vcc_flags} ${ti.vcc_file_dir} ${ti.vcc_file}
vcc_hist_flags=A0v0L0

% Delete a file from the SCCS directory
vcc_delete_command=vcc_sccs_delete ${ti.vcc_flags} ${ti.vcc_file_dir} ${ti.vcc_suffix} ${ti.vcc_file}
vcc_delete_flags=A0v0f0i0

% Rename a file from the SCCS directory
% This script does not directly correspond to command, but it is used to
%   keep the sccs directory in sync with the filestore directory whenever
%   an stputil command causes a file to be renamed.
vcc_rename_command=vcc_sccs_rename ${ti.vcc_flags} ${ti.vcc_file_dir} ${ti.vcc_file} ${ti.vcc_to_file}
vcc_rename_flags=A0v0f0

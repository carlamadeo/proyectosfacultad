// ste_check.rules
//
//	Contains the properties used for ste semantic checks
//	from both the ste editor and the desktop.

Global 1 SteCheckOne
{
    { Properties
        { Choice
            { Name "check_one" }
            { Label "" }
            { Type CheckBox }
            { ChoiceItem
		{ Label "There is one and only one start state per diagram" }
                { OnValue "-x check_one '1'" }
                { OffValue "-x check_one '0'" }
                { Init On }
            }
        }
    }
}


// sce_check.rules
//
//	Contains the properties used for sce semantic checks
//	from both the sce editor and the desktop.

Global 1 SceCheckOne
{
    { Properties
        { Choice
            { Name "check_one" }
            { Label "" }
            { Type CheckBox }
            { ChoiceItem
		{ Label "Modules have a formal SCE definition" }
                { OnValue "-x check_one '1'" }
                { OffValue "-x check_one '0'" }
                { Init On }
            }
        }
    }
}


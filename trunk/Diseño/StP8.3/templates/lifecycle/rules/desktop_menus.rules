// Menus


Include "lifecycle/rules/code_menu.rules"
Include "rules/lifecycle_menu.rules"


Menu Report
{
    { Spacer }
    { MenuEntry
        // there is a known limitation with the file open dialog under NT
        // it will not go to the specified directory if that directory is
        // empty
        { Name OpenDocExpressReport }
        { Label "Open &DocExpress Document..." }
        { Builtin "FileChooser \"Open Report\" \"StP Report (*.rtf;*.mif;*.doc)|*.rtf;*.mif;*.doc|All Files (*.*)|*\" \"${projdir}${system}/document_files\"" }
    }
    { MenuEntry
        // there is a known limitation with the file open dialog under NT
        // it will not go to the specified directory if that directory is
        // empty
        { Name OpenTestCaseReport}
        { Label "Open &Test Case Report..." }
        { Builtin "FileChooser \"Open Report\" \"StP Report (*.rpt)(*.rtf)(*.html)(*.tcf)|*.rpt;*.rtf;*.html;*.tcf|All Files (*.*)|*\" \"${projdir}${system}/test_files\"" }
    }
}


Menu Tools
{

    { MenuEntry
	{ Name PdmBrowser }
	{ Label "&Browse Repository" }
	{ ActiveFunc stp_repos_is_open }
	{ Builtin "EditorQrlEval stp_run_command(\"Repository\",\"StartGUI\");" }
    }

}
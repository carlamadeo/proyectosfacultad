// StP/Validator

Category CatModelTables
{
    { ShowOnDesktop True }
    { ParseCondition "is_validator_available(\"integrated\");" }
    { Group
         (
             TestTypes
          )
    }
}
 
Category CatModelElements
{
    { ShowOnDesktop True }
    { ParseCondition "is_validator_available(\"integrated\");" }
    { Group
         (
           UmlUseCaseObjects
           MicrosoftWord  // SPR 2467 - Microsoft Word CatModelElements
         )
    }
}


Category CatValidator
{
    { ShowOnDesktop True }
    { ParseCondition "is_validator_available(\"integrated\") && toolinfo_variable(\"SRI\") != \"True\";" }
    { Label "Validation" }
    { Group
         (
             Validator
             ValidatorCustom
             MercuryIntegration
             SegueIntegration
          )
    }
}

Category CatValidator
{
    { ShowOnDesktop True }
    { ParseCondition "is_validator_available(\"integrated\") && toolinfo_variable(\"SRI\") == \"True\";" }
    { Label "Validation" }
    { Group
         (
             Validator
             ValidatorCustom
             MercuryIntegration
             SegueIntegration
             STW
          )
    }    
}




Include "rules/version_menu.std"

Menu File
{
    { InMenuBar True }
    { Label "&File" }
    { Pin True }
    { SubMenu
	{ ParseCondition "!is_windows_platform();" }
	{ Name Vcc }
	{ Label "&Version" }
    }
    { Spacer 
        { ParseCondition "!is_windows_platform();" }
        { Name Spacer1 } 
    }
    { MenuEntry 
	{ Name Save }
	{ Label "&Save" } 
	{ Builtin "FileSave" } 
	{ Accelerator
             { Label "Ctrl+S" }
             { Value "Ctrl<Key>s" }
        }
	{ ActiveFunc idehook_save_active_func }
    }
    { MenuEntry 
	{ Name SaveAll }
	{ Label "Save A&ll" } 
	{ Builtin "FileSaveAll" } 
	{ Accelerator
             { Label "Ctrl+L" }
             { Value "Ctrl<Key>l" }
        }
	{ ActiveFunc idehook_saveall_active_func }
    }
    { MenuEntry
        { Name Close }
        { Label "&Close" }
        { Builtin "AnnotUnload" }
	{ Accelerator
             { Label "Ctrl+F4" }
             { Value "Ctrl<Key>F4" }
        }
	{ ActiveFunc idehook_close_active_func }
    }
    { Spacer { Name Spacer2 } }
    { MenuEntry
	{ Name Print }
	{ Label "&Print" }
	{ Builtin "EditorQrlEval FilePrint();" }
	{ Accelerator
	    { Label "Ctrl+P" }
	    { Value "Ctrl<Key>p" }
	}
	{ ActiveFunc idehook_close_active_func }
    }
    { Spacer { Name Spacer3 } }
    { MenuEntry 
	{ Name Quit }
	{ Label "E&xit" }
	{ Builtin "EditorQuit" }
	// ECR 6184 begin
        // Commented out the following block
	// { Accelerator
    	//      { ParseCondition "!is_windows_platform();" }
        //      { Label "Ctrl+E" }
        //      { Value "Ctrl<Key>E" }
        // }
	// ECR 6184 end
	{ Accelerator
             // ECR 6184 begin
             // Commented out the following line
    	     // { ParseCondition "is_windows_platform();" }
             // ECR 6184 end
             { Label "Alt+F4" }
             { Value "Alt<Key>F4" }
        }
    }
}

Menu Edit
{
    { InMenuBar True }
    { Label "&Edit" }
    { Pin True }
    { SubMenu
	{ Name AddNote }
	{ Label "Add &Note" }
    }
    { SubMenu
	{ Name AddItem }
	{ Label "Add &Item" }
    }
//ECR 2684 begin
    { MenuEntry
	{ Name Cut }
	{ Label "Cut" }
	{ Builtin "EditorCutText" }
	{ ActiveFunc idehook_copy_text_active_func }
        { Accelerator
	        { Label "Ctrl+X" }
	        { Value "Ctrl<Key>x" }
	    }
    }

    { MenuEntry
	{ Name Copy }
	{ Label "Copy" }
	{ Builtin "EditorCopyText" }
	{ ActiveFunc idehook_copy_text_active_func }
        { Accelerator
	        { Label "Ctrl+C" }
	        { Value "Ctrl<Key>c" }
	    }
    }

    { MenuEntry
	{ Name Paste }
	{ Label "Paste" }
	{ Builtin "EditorPasteText" }
	{ ActiveFunc idehook_paste_text_active_func }
        { Accelerator
	        { Label "Ctrl+V" }
	        { Value "Ctrl<Key>v" }
	    }
    }
    { MenuEntry
	{ Name Delete }
	{ Label "Delete" }
	{ Builtin "EditorDeleteText" }
	{ ActiveFunc idehook_delete_text_active_func }
        { Accelerator
	        { Label "Del" }
	        { Value "<Key>Delete" }
        }
	}	

    { MenuEntry
	{ Name CutNoteItem }
	{ Label "Cu&t Note/Item" }
	{ Builtin "EditorCut" }
	{ ActiveFunc idehook_delete_active_func }
        { Accelerator
	    { Label "Alt+Ctrl+X" }
	    { Value "Alt Ctrl<Key>x" }
	}
    }
    { MenuEntry
	{ Name CopyNoteItem }
	{ Label "&Copy Note/Item" }
	{ Builtin "EditorCopy" }
	{ ActiveFunc idehook_note_or_item_selected_active_func }
        { Accelerator
	    { Label "Alt+Ctrl+C" }
	    { Value "Alt Ctrl<Key>c" }
	}
    }
    { MenuEntry
	{ Name PasteNoteItem }
	{ Label "&Paste Note/Item" }
	{ Builtin "EditorPaste" }
	{ ActiveFunc idehook_paste_active_func }
        { Accelerator
	    { Label "Alt+Ctrl+V" }
	    { Value "Alt Ctrl<Key>v" }
	}
    }
    
    { MenuEntry
	{ Name DeleteNoteItem }
	{ Label "&Delete Note/Item" }
	{ Builtin "EditorDelete" }
	{ ActiveFunc idehook_delete_active_func }
        { Accelerator
	    { Label "Alt+Del" }
	    { Value "Alt<Key>Delete" }
	}
    }

//ECR 2684 end

    { Spacer { Name Spacer1 } }
    { MenuEntry
	{ Name EditDesc }
	{ Label "Note Description..." }
	{ Builtin "NoteEditDescription" }
	{ ActiveFunc idehook_note_selected_active_func }
    }
    { Spacer { Name Spacer2 } }
    { MenuEntry
	{ Name Options }
	{ Label "&Options..." }
	{ Builtin "OptionsShow" }
    }
}


Global CreateSystemBaseline
{
    { ClassCommand
	{ Name "CreateSystemBaseline" }
	{ Label "Baseline Current System..." }
	{ ShowPopsOnExec True }
	{ Properties
	    { Text
		{ Name "basename" }
		//{ Label "Baseline System name:" } // ECR 7001
		{ Label "Baseline File name:" }   // ECR 7001
    		{ MinLength 1 }
    		{ MaxLength 256 }
	    }
	    { Text
    		{ Name "basedir" }
    		{ Label "Save directory:" }
    		{ MinLength 1 }
    		{ MaxLength 256 }
	    }
        // ECR 3651
        { Button
            { Name "browse_for_basedir" }
            { Label "Choose" }
            { Event
                { Type Select }
                { Callback "select_baseline_basedir_callback" }
            }
        }
        { Group
            { Name "folder_group" }
            { Label "" }
            { Type Horizontal }
            { Resizable ResizeAny }
            { ChildSizePolicy ResizeWidth }
            { LayoutPolicy ResizeAny }
            { VerticalAlign AlignLabels }
            { Members ( basedir browse_for_basedir ) }
        }
        // ECR 3651
	    { Choice
    		{ Name "overwrite_file" }
    		{ Type CheckBox }
    		{ ChoiceItem
    		    { Label "Overwrite existing baseline file." }
    		    { Init Off }
    		}
	    }
	    { Choice
    		{ Name "create_dir" }
    		{ Type CheckBox }
    		{ ChoiceItem
    		    { Label "Create directory if it doesn't exist." }
    		    { Init On }
    		}
	    }
	    { Choice
    		{ Name "ignore_lock" }
    		{ Type CheckBox }
    		{ ChoiceItem
    		    { Label "Ignore locks." }
    		    { Init Off }
    		}
	    }
	    { Group 
	        { Name "choice_group" }
            { Type Vertical }
            { Resizable ResizeAny }
            { ChildSizePolicy ResizeWidth }
            { LayoutPolicy ResizeAny }
            { HorizontalAlign AlignLabels }
        }	        
        { TopGroup
            { Align Left }
            { Members ( basename folder_group choice_group ) }
        }
	    { Button
    		{ Name "OK" }
    		{ Label "OK" }
		{ Event
		    { Type Activation }
		    { Callback "CreateSystemBaselineFunc" }
		}
		{ Event
		    { Type Select }
		    { Callback "CreateSystemBaseline_cb" }
		}
	    }
	    { Button
		{ Name "Reset" }
		{ Label "Reset" }
		{ Event
		    { Type Select }
		    { Callback "CreateSystemBaselineFunc" }
		}
	    }
	}
    }
}


Global RestoreSystemBaseline
{
    { ClassCommand
	{ Name "RestoreSystemBaseline" }
        { Label "Restore Selected Baseline System..." }
	{ ShowPopsOnExec True }
	{ Properties
	    { Text
    		{ Name "basename" }
    		{ Label "Baseline file" }
    		{ LabelAbove True }
    		{ MinLength 1 }
            	{ DispLength 60 }
    		{ MaxLength 256 }
	    }
           // ECR 3651
            { Button
            	{ Name "browse_for_basename" }
            	{ Label "Choose" }
            	{ Event
                    { Type Select }
                    { Callback "select_baseline_file_callback" }
            	}
            }
	    { Text
    		{ Name "basedir" }
    		{ Label "Restore to directory:" }
    		{ LabelAbove True }
    		{ MinLength 1 }
    		{ MaxLength 256 }
            { DispLength 60 }
            { InitVal "${projdir}" }
	    }
            { Button
            	{ Name "browse_for_basedir" }
            	{ Label "Choose" }
            	{ Event
                    { Type Select }
                    { Callback "select_baseline_basedir_callback" }
            	}
            }
        { Group
            { Name "folder_group_basename" }
            { Label "" }
            { Type Horizontal }
            { Resizable ResizeAny }
            { ChildSizePolicy ResizeWidth }
            { LayoutPolicy ResizeAny }
            { Align Bottom }
            { Members ( basename browse_for_basename ) }
        }
        { Group
            { Name "folder_group_basedir" }
            { Label "" }
            { Type Horizontal }
            { Resizable ResizeAny }
            { ChildSizePolicy ResizeWidth }
            { LayoutPolicy ResizeAny }
            { Align Bottom }
            { Members ( basedir browse_for_basedir ) }
        }
	    { Text
    		{ Name "system_name" }
    		{ Label "Restore System name:" }
    		{ LabelAbove True }
    		{ MinLength 1 }
    		{ MaxLength 256 }
            	{ DispLength 60 }
	    }
        // ECR 3651
        { TopGroup
            { Align Left }
            { Members ( folder_group_basename folder_group_basedir ) }
        }
	    { Button
    		{ Name "OK" }
    		{ Label "OK" }
		{ Event
		    { Type Activation }
		    { Callback "RestoreSystemBaselineFunc" }
		}
		{ Event
		    { Type Select }
		    { Callback "RestoreSystemBaseline_cb" }
		}
	    }
	}
    }
}

Note 806005
{
    { AppType MultiTableRptOptions }
    { PrintName "Multi-Table Report Options" }
    { HelpText "The Table Report Options note lets you add items containing basic information about the tables to be included in a report such as the type, whether they should be portrait or landscape, or which ones to omit. Options like row or column range determine which rows/columns to print (1-3, 6-*)." }
    { Bounds { Min 1 } { Max 1 } }
    { Item   
        { AppType TableType }  
        { PrintName "Table Type" }  
        { Bounds { Min 1 } { Max 1 } }    
        { HelpText "This item is required, and represents the table type that will be produced. Choose from the list of available types." }
    }
    { Item
        { AppType StartEachNewPage }
        { PrintName "Start Each On New Page" }
        { InitValue "True" }
        { Bounds { Min 0 } { Max 1 } }
        { HelpText "This item determines if each table should start on a new page." }
    }
    { Item 
        { AppType Caption } 
        { PrintName "Caption" } 
        { Bounds { Min 0 } { Max 1 } }
        { HelpText "This item specifies the caption shown for each table. The default caption used if this item is not specified is 'Table : ' followed by the name of the table." }
    } 
    { Item
        { AppType TableOrientation }
        { PrintName "Orientation" }
        { InitValue "PortraitTable" }
        { Bounds { Min 1 } { Max 1 } }
        { HelpText "This item determines whether the diagram should be oriented as PortraitTable (default), or LandscapeTable." }
    }
    { Item
        { AppType TableWidth }
        { PrintName "Table Width" }
        { InitValue "6.0" }
        { Bounds { Min 0 } { Max 1 } }
        { HelpText "This item determines the width of the frame into which the table will be placed." }
    }
    { Item
        { AppType RowRange }
        { PrintName "Row Range" }
        { Bounds { Min 0 } { Max 1 } }
        { HelpText "This item optionally specifies a range of rows to be printed. The format of this would resemble '1,3,5,7-10, 18-*'." }
    }
    { Item
        { AppType ColumnRange }
        { PrintName "Column Range" }
        { Bounds { Min 0 } { Max 1 } }
        { HelpText "This item optionally specifies a range of columns to be printed. The format of this would resemble '1,3,5,7-10, 18-*'." }
    }
    { Item
        { AppType HeaderRowRange }
        { PrintName "Header Row Range" }
        { Bounds { Min 0 } { Max 1 } }
        { HelpText "This item optionally specifies a range of header rows to be printed. The format of this would resemble '1,3,5,7-10, 18-*'." }
    }
    { Item
        { AppType ShowRowIndices }
        { PrintName "Show Row Indices" }
        { Bounds { Min 0 } { Max 1 } }
        { InitValue "True" }
        { HelpText "This item determines if row indices should be displayed." }
    }
    { Item
        { AppType ShowColumnIndices }
        { PrintName "Show Column Indices" }
        { Bounds { Min 0 } { Max 1 } }
        { InitValue "True" }
        { HelpText "This item determines if column indices should be displayed." }
    }
    { Item 
        { AppType OmitTableCalled } 
        { PrintName "Omit Table Called" }   
        { Bounds { Min 0 } { Max 1 } }
        { HelpText "This item allows a multi-table section to omit one particular table." }
    }
    { Item
        { AppType SortBy }
        { PrintName "Sort By" }
        { Bounds { Min 0 } { Max 1 } }
        { HelpText "This item allows the order of the tables to be specified.  Typically, this order might be by name or another attribute of a file type." }
    }
    { Item 
        { AppType PrintSetting }
        { PrintName "Use Print Setting" } 
        { Bounds { Min 0 } { Max 1 } }    
        { HelpText "This item specifies a common named print setting to use when printing these tables." } 
    }
}

Include "annotation/GenericRptOptions.note"
Include "annotation/generic_object"


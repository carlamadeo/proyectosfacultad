// Active Function

int
UmlComponentObjectPropsActive()
{
    list symbols;

    symbols = gde_selected_symbols();
    if (list_count(symbols) != 1)
        return ACTIVE_FUNC_IS_INACTIVE;
    // ECR 5184 added Class symbol
    if (list_count(gde_symbols_find_with_types(symbols, string_to_list("binaryComponent executableComponent sourceComponent objectComponent interfaceComponent Dependency Interface isComponentOf Class", " "))) == 1)
        return ACTIVE_FUNC_IS_ACTIVE;

    return ACTIVE_FUNC_IS_INACTIVE;
}


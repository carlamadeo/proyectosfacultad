// SPR 4969 - Model Management
// used for Model Management to have one common display mark
TypeSet AllLockableNodeTypes
{
    deploymentComponent
    binaryComponent 
    executableComponent
    objectComponent
    interfaceComponent
}

TypeSet StereotypeableNodeSet
{
    binaryComponent
    executableComponent
    objectComponent
    interfaceComponent
    deploymentComponent
}

NodeSymbol StereotypeableNodeSet
{
    { Methods
        { Method
            { Name DoubleClick }
            { MethodFunc UmlDeployment_ps_double_click }
        }
    }
}

TypeSet StereotypeableLinkSet
{
    deploys
    Dependency
    Interface
    isComponentOf
}

LinkSymbol StereotypeableLinkSet
{
    { Methods
        { Method
            { Name DoubleClick }
            { MethodFunc UmlDeploymentLink_ps_double_click }
        }
    }
}

